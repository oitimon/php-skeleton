{
    "name": "oitimon/php-skeleton",
    "type": "library",
    "description": "",
    "keywords": [
        "oitimon",
        "php-skeleton"
    ],
    "homepage": "https://github.com/oitimon/php-skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Oleksandr",
            "email": "yeremeyev.alexander@gmail.com",
            "homepage": "https://github.com/oitimon",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2"
    },
    "require-dev": {
        "phpunit/phpunit" : "^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Oitimon\\PhpSkeleton\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Oitimon\\PhpSkeleton\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
